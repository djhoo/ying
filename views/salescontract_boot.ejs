<script language=JavaScript>
	$(document).ready(function(){

		var id;
		checkSelect();
		checkSelectValue();
		$(".year").change(function() { 
			checkSelect();
			checkSelectValue();
		});


		$("div#shyeshare").show();
		$("div#ahyeshare").hide();
		$("div#shgenius").hide();
		
		$('#navtab').on('click','li',function(){
			$("li").each(function(){
      			$(this).removeClass("active");
    		});
  			//alert($(this).text());
  			$(this).addClass("active");
  			id = $(this).attr("id");

  			$("div#shyeshare").hide();
			$("div#ahyeshare").hide();
			$("div#shgenius").hide();
  			$("div#"+id).show();

		})


	});
	
	function checkSelect(){
		var isChecked2017 = $('#chk2017').prop('checked'); 
		var isChecked2018 = $('#chk2018').prop('checked'); 
		if(isChecked2017){
			$("tr[id^=2017]").show();
		}
		else{
			$("tr[id^=2017]").hide();
		}
	  	if(isChecked2018){
			$("tr[id^=2018]").show();
		}
		else{
			$("tr[id^=2018]").hide();
		}
	}
	function checkSelectValue(){
		var isChecked2017 = $('#chk2017').prop('checked'); 
		var isChecked2018 = $('#chk2018').prop('checked'); 
		if((isChecked2017) && (isChecked2018)){
			$(".valueall").show();
			$(".value2017").hide();
			$(".value2018").hide();
		}
		if((isChecked2017) && (!isChecked2018)){
			$(".valueall").hide();
			$(".value2017").show();
			$(".value2018").hide();
		}
		if((!isChecked2017) && (isChecked2018)){
			$(".valueall").hide();
			$(".value2017").hide();
			$(".value2018").show();
		}
		if((!isChecked2017) && (!isChecked2018)){
			$(".valueall").hide();
			$(".value2017").hide();
			$(".value2018").hide();
		}
	}
</script>
